@model Carbook.Dto.AuthorDTOs.CreateAuthorDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Yazar Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Yazarı Giriniz</p>

        <form asp-action="CreateAuthor"  asp-controller="AdminAuthor" method="post">

            <div class="form-group">
                <label>Ad Soyad Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Ad Soyad Giriniz" class="form-control">
            </div>

            <div class="form-group">
                <label>Açıklama Giriniz</label>
                <input type="text" asp-for="Description" placeholder="Açıklama Giriniz" class="form-control">
            </div>


            <div class="form-group">
                <label>Image Linki Giriniz</label>
                <input type="text" asp-for="ImageUrl" placeholder="Image Linki Giriniz" class="form-control">
            </div>


            <button type="submit" class="btn btn-success">
                Ekle
            </button>


        </form>
    </div>

</div>