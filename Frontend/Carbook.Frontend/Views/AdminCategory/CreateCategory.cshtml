@model CarBook.Dto.CategoryDTOs.CreateCategoryDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Kategori Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Kategoriyi Giriniz </p>

        <form asp-action="CreateCategory"  asp-controller="AdminCategory" method="post">

            <div class="form-group">
                <label>Kategori Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Kategori Giriniz" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">
                Ekle
            </button>


        </form>
    </div>

</div>