@model List<Carbook.Dto.CarFeaturesDTOs.ResultCarFeaturesDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                
                <h4 class="card-title">Araba Ozellikleri Listesi</h4>
                <p class="card-subtitle mb-4"> Arabalarin Ozellikleri
                </p>
                <form method="post">
                    @if (Model != null && Model.Any())
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].Id"/>
                                <input type="hidden" asp-for="@Model[i].FeaturesName"/>
                                <input type="checkbox" asp-for="@Model[i].IsAvaible" class="form-check-input" />
                                <label class="form-check-label" for="@Model[i].IsAvaible">@Model[i].FeaturesName</label>
                            </div>
                        }
                        <br/>
                        <button class="btn btn-success">Degisiklik Kaydet</button>
                    }
                    else
                    {
                        <p>Bu araç için özellik bulunamadı.</p>
                    }
                </form> 
            </div>
        </div>
    </div>
</div>