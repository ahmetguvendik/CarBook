@model CarBook.Dto.AdminDTOs.CreateCarDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Arac Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Yeni Araba </p>

        <form asp-action="CreateCar"  asp-controller="AdminCar" method="post">
            <div class="form-group">
                <label for="simpleinput">Marka</label>
                @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>) ViewBag.Brands, new {@class="form=control"})
            </div>

            <div class="form-group">
                <label>Model</label>
                <input type="text" asp-for="Model" placeholder="Model" class="form-control">
            </div>

            <div class="form-group">
                <label>Kilometre</label>
                <input type="number" asp-for="Km" placeholder="Kilometre" class="form-control">
            </div>

            <div class="form-group">
                <label>Vites</label>
                <input type="text" asp-for="Vites" placeholder="Vites" class="form-control">
            </div>

            <div class="form-group">
                <label>Koltuk</label>
                <input type="number" asp-for="Koltuk" placeholder="Koltuk" class="form-control">
            </div>

            <div class="form-group">
                <label>Bagaj</label>
                <input type="number" asp-for="Bagaj" placeholder="Bagaj" class="form-control">
            </div>

            <div class="form-group">
                <label>Yakit</label>
                <input type="text" asp-for="Fuel" placeholder="Yakit" class="form-control">
            </div>
            <div class="form-group">
                <label>Cover Image URL</label>
                <input type="text" asp-for="CoverImageUrl" placeholder="Cover Image URL" class="form-control">
            </div>
            <div class="form-group">
                <label>Detay Image URL</label>
                <input type="text" asp-for="DetailImageUrl" placeholder="Detay Image URL" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-success">Submit
                Kaydet
            </button>
            

        </form>
    </div>
    <!-- end card-body-->
</div>