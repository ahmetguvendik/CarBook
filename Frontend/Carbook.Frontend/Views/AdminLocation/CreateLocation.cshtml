@model Carbook.Dto.LocationDTOs.CreateLocationDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Lokasyon Ekleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sisteme Eklemek Istediginiz Lokasyonu Giriniz </p>

        <form asp-action="CreateLocation"  asp-controller="AdminLocation" method="post">

            <div class="form-group">
                <label>Lokasyon Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Lokasyon Giriniz" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">
                Ekle
            </button>


        </form>
    </div>

</div>