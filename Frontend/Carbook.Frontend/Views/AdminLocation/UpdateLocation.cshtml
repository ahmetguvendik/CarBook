@model Carbook.Dto.LocationDTOs.UpdateLocationDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Lokasyon Güncelleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sistemde Güncellemek Istediginiz Lokasyonu Giriniz </p>

        <form asp-action="UpdateLocation"  asp-controller="AdminLocation" method="post">

            <div class="form-group">
                <label>Lokasyon Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Lokasyon Giriniz" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">
                Güncelle
            </button>
        </form>
    </div>

</div>