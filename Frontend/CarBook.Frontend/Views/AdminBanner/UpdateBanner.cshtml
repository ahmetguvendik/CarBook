@{

    Layout = null;
}
@model CarBook.Dto.BannerDTOs.UpdateBannerDto

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Banner Guncelleme</h4>
                <p class="card-subtitle mb-4">Guncellemek Istediginiz Banner Yaziniz</p>

                <form asp-controller="AdminBanner" asp-action="UpdateBanner" method="post">

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Baslik</label>
                        <input type="text" class="form-control" placeholder="Baslik" asp-for="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Aciklama</label>
                        <input type="text" class="form-control" placeholder="Aciklama" asp-for="@Model.Description">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Video Aciklamasi</label>
                        <input type="text" class="form-control" placeholder="Video Aciklamasi" asp-for="@Model.VideoDescription">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Video Linki</label>
                        <input type="text" class="form-control" placeholder="Video Linki" asp-for="@Model.VideoURL">
                    </div>

                    <button>
                        Guncelle
                    </button>

                </form>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div> <!-- end col -->


</div>