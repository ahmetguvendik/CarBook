@model CarBook.Dto.BrandDTOs.UpdateBrandDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Arac Markasi Guncelleme Sayfasi</h4>
        <p class="card-subtitle mb-4">Sistemde Guncellemek Istediginiz Yeni Marka Sayfasi </p>

        <form asp-action="UpdateBrand"  asp-controller="AdminBrand" method="post">

            <div class="form-group">
                <label>Marka Giriniz</label>
                <input type="text" asp-for="Name" placeholder="Marka Giriniz" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-success">
                Guncelle
            </button>
            

        </form>
    </div>
    <!-- end card-body-->
</div>