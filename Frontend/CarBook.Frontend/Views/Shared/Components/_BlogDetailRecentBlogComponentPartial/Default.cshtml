@model List<CarBook.Dto.BlogDTOs.ResultGet3BlogWithAuthorDto>

<div class="sidebar-box ftco-animate">
    <h3>Diger Bloglar</h3>
    @foreach (var item in Model)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(@item.CoverImageUrl);"></a>
            <div class="text">
                <h3 class="heading"><a href="#"></a>@item.Title</h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span>@item.CreatedTime.ToShortDateString()</a></div>
                    <div><a href="#"><span class="icon-person"></span> @item.AuthorName</a></div>
                    <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                </div>
            </div>
        </div>
    }


</div>