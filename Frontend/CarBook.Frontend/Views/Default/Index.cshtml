@model Carbook.Dto.FilterRentACar.RentACarFilterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadUILayoutComponentPartial")
<body>

    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    <!-- END nav -->

    @await Component.InvokeAsync("_DefaultHeadUILayoutComponentPartial")

     <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" asp-action="Index" asp-controller="Default" class="request-form ftco-animate bg-primary">
                                <h2>Hemen Aracinizi Kiralayin</h2>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Alma Lokasyonu </label>
                                    @Html.DropDownListFor(x=>x.LocationId,(List<SelectListItem>)ViewBag.Locations, new {@class="form-control"})
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Etme Lokasyonu</label>
                                    @Html.DropDownListFor(x=>x.LocationId,(List<SelectListItem>)ViewBag.Locations, new {@class="form-control"})
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Teslim Alma Tarihi</label>
                                        <input type="date" class="form-control" asp-for="BookPickDate" placeholder="Tarih">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Etme Tarihi</label>
                                        <input type="date" class="form-control" asp-for="BookOffDate" placeholder="Tarih">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Alma Saati</label>
                                    <input type="time" class="form-control" asp-for="TimePick" placeholder="Saat">
                                </div>
                                
                                <div class="form-group">
                                    <label for="" class="label">Teslim Etme Saati</label>
                                    <input type="time" class="form-control" asp-for="TimeOffPick" placeholder="Saat">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary py-3 px-4">Şimdi Araç Kirala!</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araba Kiralamanın En Hızlı Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Araç Alacağınız Lokasyonu Seçin</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Fiyatlara Göz Atın</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamak İstediğiniz Aracı Seçin</h3>
                                            </div>
                                        </div>
                                    </div> 
                                </div>
                                <p><button class="btn btn-primary py-3 px-4">Araçlari Sirala</button></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
 

    @await Component.InvokeAsync("_Get5CarsWithBrandsComponentPartial")


    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")
    @await Component.InvokeAsync("_Get3BlogWithAuthorComponentPartial")

    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")
    <!-- loader -->

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")
    

</body>
</html>