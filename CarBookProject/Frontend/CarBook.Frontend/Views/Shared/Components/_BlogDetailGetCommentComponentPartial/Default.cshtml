@model List<CarBook.Dto.CommentDTOs.ResultCommentDto>

<div class="pt-5 mt-5">
    <h3 class="mb-5">Yorumlar</h3>
    @foreach (var item in Model)
    {
        <ul class="comment-list">
            <li class="comment">

                <div class="comment-body">
                    <h3>@item.Name</h3>
                    <div class="meta">@item.CreatedTime.ToShortDateString()</div>
                    <p>@item.Description</p>
                </div>
            </li>
        </ul>
            }

        
        <!-- END comment-list -->
        @await Component.InvokeAsync("_BlogDetailCreateCommentComponentPartial")

    </div>