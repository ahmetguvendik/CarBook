@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

@model CarBook.Dto.ContactDTOs.CreateContactDto

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_ContactComponentPartial")
            <div class="col-md-8 block-9 mb-md-5">
                <form asp-action="Index" asp-controller="Contact" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Adiniz ve Soyadiniz" asp-for="@Model.Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="@Model.Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="@Model.Subject">
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" placeholder="Mesaj" asp-for="@Model.Description"></textarea>
                    </div>
                    <button>
                        Gonder
                    </button>
                </form>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>
